@model CURSOVA.Models.ViewModels.RegistrationModel

@using (Html.BeginForm(new { id = "my-form" }))
{
    <p>
        <label>Email:</label>
        @Html.TextBoxFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email)
    </p>
    <p>
        <label>Login:</label>
        @Html.TextBoxFor(x => x.UserName)
        @Html.ValidationMessageFor(x => x.UserName)
    </p>
    <p>
        <label>Name:</label>
        @Html.TextBoxFor(x => x.Name)
        @Html.ValidationMessageFor(x => x.Name)
    </p>
    <p>
        <label>SurName:</label>
        @Html.TextBoxFor(x => x.SurName)
        @Html.ValidationMessageFor(x => x.SurName)
    </p>    
    <p>
        <label>Password:</label>
        @Html.PasswordFor(x => x.Password)
        @Html.ValidationMessageFor(x => x.Password)
    </p>
    <p>
        <label>Confirm Password:</label>
        @Html.PasswordFor(x => x.ConfirmPassword)
        @Html.ValidationMessageFor(x => x.ConfirmPassword)
    </p>
    <p>
        <input type="button" value="Submit" onclick="Registration(this)" />
    </p>
}